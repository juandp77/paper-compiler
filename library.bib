journal = {European Journal of Orthopaedic Surgery {\&} Traumatology},
keywords = {Degenerative spondylolisthesis,Interbody fusion,degenerative spondylolisthesis {\'{a}} interbody},
number = {2},
pages = {169--180},
publisher = {Springer Paris},
title = {{Degenerative spondylolisthesis: contemporary review of the role of interbody fusion}},
