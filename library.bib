journal = {Journal of neurosurgery. Spine},
keywords = {Accidental Falls,Drainage,Drainage: methods,Female,Humans,Magnetic Resonance Imaging,Meningocele,Meningocele: cerebrospinal fluid,Meningocele: etiology,Meningocele: therapy,Middle Aged,Sacrum,Sacrum: injuries,Tomography, X-Ray Computed,Treatment Outcome},
number = {3},
pages = {384--8},
pmid = {23829288},
title = {{Anterior sacral pseudomeningocele following minimal trauma: case report.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/23829288},
volume = {19},
year = {2013}
