keywords = {Meningioma,laser surgery,radiation therapy,spinal cord tumor,spinal surgery},
number = {5},
pages = {458--464},
pmid = {8874546},
title = {{Intraspinal meningiomas: Review of 54 cases with discussion of poor prognosis factors and modern therapeutic management}},
volume = {46},
year = {1996}
}
