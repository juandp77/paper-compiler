title = {{Git can facilitate greater reproducibility and increased transparency in science.}},
url = {http://www.scfbm.org/content/8/1/7 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3639880{\&}tool=pmcentrez{\&}rendertype=abstract},
