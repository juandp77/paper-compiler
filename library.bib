isbn = {1933-0693 (Electronic)$\backslash$r0022-3085 (Linking)},
issn = {1933-0693},
journal = {Journal of neurosurgery},
keywords = {cerebrum,inferior limiting insular sulcus,microsurgical anatomy,temporal stem,transsylvian approach,white matter fibers},
